@{
    ViewData["Title"] = "Доступ запрещен";
    Layout = "_Layout";
}

<div class="container text-center mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h1><i class="fas fa-ban"></i> Доступ запрещен</h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger">У вас нет прав для доступа к этой странице</h3>
            <p class="lead">Ваш аккаунт имеет роль "Пользователь", но требуется роль "Администратор"</p>

            <div class="mt-4">
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-lg btn-danger">
                        <i class="fas fa-sign-out-alt"></i> Выйти из аккаунта
                    </button>
                </form>
                <a href="/" class="btn btn-lg btn-secondary">
                    <i class="fas fa-home"></i> На главную
                </a>
            </div>
        </div>
    </div>
</div>